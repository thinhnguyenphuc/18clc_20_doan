<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:menu="@menu/delete_menu"
    >

    <ImageButton
        android:id="@+id/back_from_delete_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/cancel_icon"
        android:background="@drawable/pe_button"
        app:layout_columnWeight="1"
        android:layout_marginVertical="@dimen/button_vertical_margin"
        />

    <LinearLayout
        android:id="@+id/select_all_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/select_all_check_box"
            android:layout_width="wrap_content"
            android:checked="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/select_all"/>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>