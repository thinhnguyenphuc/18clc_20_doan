<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/pe_toolbar"
        >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/itemlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:scrollbars="none"
               >
<!--                <ImageButton-->
<!--                    android:id="@+id/rotate_button"-->
<!--                    android:layout_width="@dimen/button_size"-->
<!--                    android:layout_height="@dimen/button_size"-->
<!--                    android:layout_marginHorizontal="@dimen/button_distance"-->
<!--                    android:src="@drawable/rotate_icon"-->
<!--                    android:background="@drawable/pe_button"-->
<!--                    android:scaleType="fitCenter"-->
<!--                    android:adjustViewBounds="true"
android:layout_marginVertical="@dimen/button_vertical_margin" -->
<!--                    />-->

                <ImageButton
                    android:id="@+id/brush_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/brush_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
                <ImageButton
                    android:id="@+id/eraser_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/eraser_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
                <ImageButton
                    android:id="@+id/text_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/text_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
                <ImageButton
                    android:id="@+id/filter_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/filter_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
                <ImageButton
                    android:id="@+id/brightness_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/brightness_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
                <ImageButton
                    android:id="@+id/add_emoji_button"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginHorizontal="@dimen/button_horizontal_margin"
                    android:src="@drawable/emoji_icon"
                    android:background="@drawable/pe_button"
                    android:layout_marginVertical="@dimen/button_vertical_margin"
                    />
            </LinearLayout>

        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>